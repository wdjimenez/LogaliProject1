<mvc:View controllerName="logali.Customers.controller.CustomerList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
	<List headerText="{i18n>customerListTitle}" class="sapUiResponsiveMargin" width="auto" items="{customer>/Customers}">
		<items>
			<ObjectListItem title="{customer>CompanyName} / {customer>ContactName}" 
							number="{
										parts: [{path: 'customer>SalesAmount'},
												{path: 'view>/currency'}],
										type: 'sap.ui.model.type.Currency',
										formatOptions:{
											showMeasure: false
										}
									}"
							numberUnit="{view>/currency}"
			/>
		</items>
	</List>
</mvc:View>	